{
  // VScode
  "redhat.telemetry.enabled": false,
  "extensions.ignoreRecommendations": true,
  "azureResourceGroups.groupBy": "resourceType",
  // Terminal
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeight": "400",
  "terminal.integrated.fontWeightBold": "500",
  "terminal.integrated.lineHeight": 1.0,
  // Dapr
  "dapr.paths.daprPath": "/usr/local/bin/dapr",
  /// "dapr.paths.daprdPath": "~/.dapr/bin/daprd",
  "adrManager.adrDirectory": "docs/adr",
  // git/github
  "git.defaultBranchName": "main",
  "git.branchProtection": [
    "main"
  ],
  "git.inputValidationSubjectLength": 50,
  "git.inputValidationLength": 72,
  "git.confirmSync": false,
  "github.gitProtocol": "ssh",
  // Explorer
  "explorer.autoReveal": true,
  // Editor
  "editor.minimap.enabled": true,
  "editor.wordWrap": "on",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.tabSize": 4,
  "editor.fontSize": 14,
  "editor.fontFamily": "Fira Code, Consolas, 'Courier New', monospace",
  "editor.rulers": [
    120
  ],
  // Files
  "files.autoSave": "afterDelay",
  "files.exclude": {
    "_site": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/.sass-cache": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/bower_components/**": true,
    "**/.venv": true,
    "**/.devbox": true,
    "**/.terraform": true,
    "**/*.tfplan": true,
    "**/CVS": true,
  },
  "files.associations": {
    "*.tmpl": "html",
    "*.html.erb": "html"
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.venv": true,
    "**/.devbox": true,
  },
  // Languages
  "[markdown]": {
    "editor.formatOnSave": true,
    "files.trimTrailingWhitespace": false
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[css]": {
    "editor.formatOnSave": true,
  },
  "[javascript]": {
    "editor.formatOnSave": false,
  },
  "[python]": {
    "editor.tabSize": 4,
    "terminal.activateEnvironment": false,
  },
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
  },
  "[terraform-vars]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
  },
  // Dictionary
  "cSpell.language": "en,pt",
  "cSpell.userWords": [
    "appset",
    "argocd",
    "argoproj",
    "azurecr",
    "dapr",
    "daprd",
    "devbox",
    "gitops",
    "healthz",
    "helmlint",
    "istio",
    "keda",
    "keras",
    "keycloak",
    "keyvault",
    "kiali",
    "kubeadm",
    "kubeconform",
    "kubelet",
    "kuberay",
    "kustomize",
    "kyverno",
    "milvus",
    "onnx",
    "otel",
    "promtail",
    "readyz",
    "rollouts",
    "rstudio",
    "scikit",
    "shellcheck",
    "trivy"
  ],
  // Workbench
  "workbench.activityBar.location": "top",
  "workbench.startupEditor": "none",
  "workbench.iconTheme": "material-icon-theme",
  "window.autoDetectColorScheme": true,
  "remoteHub.gitProtocol": "ssh",
  "update.showReleaseNotes": false,
}
